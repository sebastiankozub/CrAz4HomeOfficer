<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="c:\temp\console-example-internal-serwis.log"
      internalLogLevel="Info"
      throwConfigExceptions="true"  >

  <targets>
    <target xsi:type="File" name="fileGeneral" fileName="c:\temp\service\output-general.log"
            layout="${logger}|${date}|${level:uppercase=true}|${message} ${exception}|${all-event-properties}" />    
    <target xsi:type="File" name="fileKeylog" fileName="c:\temp\service\output-keylog.log"
            layout="${logger}|${date}|${level:uppercase=true}|${message} ${exception}|${all-event-properties}" />    
    <target xsi:type="Console" name="Console"
            layout="${logger}|${date}|${level:uppercase=true}|${message} ${exception}|${all-event-properties}" />
  </targets>

  <rules>    
    <logger name="*" minlevel="Trace" writeTo="fileGeneral" />    
    <logger name="keyHook" minlevel="Trace" writeTo="fileKeylog" >      <filters defaultAction="Log">
        <when condition="contains('${message}','KeyHookLog')" action="Log" />
      </filters>
    </logger>    
  </rules>
  
</nlog>
